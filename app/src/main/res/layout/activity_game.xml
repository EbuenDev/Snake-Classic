<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C222E"
    tools:context=".GameActivity">

    <!-- Top spacer to create margin -->
    <LinearLayout
        android:id="@+id/topSpacer"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:background="#1C222E"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/scoreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Score: 0"
            android:fontFamily="@font/solderwood_regular"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingStart="20dp"
            android:layout_marginTop="20dp"/>

        <ImageButton
            android:id="@+id/pauseButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="44dp"
            android:background="@drawable/outline_pause_circle_24"
            android:layout_marginEnd="20dp"/>
    </LinearLayout>

    <com.devian.snakeclassic.view.GameView
        android:id="@+id/gameView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topSpacer"
        android:layout_above="@id/dpadLayout"
        android:layout_margin="8dp" />

    <RelativeLayout
        android:id="@+id/dpadLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="16dp">

        <Button
            android:id="@+id/upButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:text="@string/up"
            android:textSize="20sp"
            android:fontFamily="@font/solderwood_regular"
            android:background="@drawable/rounded_button"/>

        <Button
            android:id="@+id/downButton"
            android:layout_width="80dp"
            android:layout_height="75dp"
            android:layout_below="@id/upButton"
            android:layout_centerHorizontal="true"
            android:text="@string/down"
            android:textSize="20sp"
            android:fontFamily="@font/solderwood_regular"
            android:background="@drawable/rounded_button"/>

        <Button
            android:id="@+id/leftButton"
            android:layout_width="80dp"
            android:layout_height="75dp"
            android:layout_toStartOf="@id/downButton"
            android:layout_marginTop="85dp"
            android:layout_marginEnd="5dp"
            android:text="@string/left"
            android:fontFamily="@font/solderwood_regular"
            android:textSize="20sp"
            android:background="@drawable/rounded_button"/>

        <Button
            android:id="@+id/rightButton"
            android:layout_width="155dp"
            android:layout_height="75dp"
            android:layout_toEndOf="@id/downButton"
            android:layout_marginTop="85dp"
            android:layout_marginStart="5dp"
            android:text="@string/right"
            android:textSize="20sp"
            android:fontFamily="@font/solderwood_regular"
            android:background="@drawable/rounded_button"/>

    </RelativeLayout>

    <!-- Use your original structure but fix the IDs and positioning -->
    <LinearLayout
        android:id="@+id/gameOverLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:elevation="30dp"
        android:background="@drawable/rounded_background"
        android:padding="32dp">

        <TextView
            android:id="@+id/gameOverTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Game Over"
            android:textColor="#FD504B"
            android:textSize="48sp"
            android:fontFamily="@font/solderwood_regular"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:id="@+id/finalScoreTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:fontFamily="@font/solderwood_regular"
            android:gravity="center" />


        <Button
            android:id="@+id/resumeButton"
            android:layout_width="160dp"
            android:layout_height="70dp"
            android:text="RESUME"
            android:textSize="25sp"
            android:visibility="gone"
            android:background="@drawable/restart_button_selector"
            android:fontFamily="@font/solderwood_regular"
            />
        <Button
            android:id="@+id/restartButton"
            android:layout_width="160dp"
            android:layout_height="70dp"
            android:layout_marginTop="24dp"
            android:text="RESTART"
            android:textSize="25sp"
            android:background="@drawable/restart_button_selector"
            android:fontFamily="@font/solderwood_regular"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/mainMenuButton"
            android:layout_width="160dp"
            android:layout_height="70dp"
            android:layout_marginTop="8dp"
            android:text="MAIN MENU"
            android:textSize="25sp"
            android:background="@drawable/menu_button_selector"
            android:fontFamily="@font/solderwood_regular"
            android:textStyle="bold"/>

    </LinearLayout>

</RelativeLayout>